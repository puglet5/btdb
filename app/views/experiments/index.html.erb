<div class="py-24 px-4 mx-auto max-w-screen-xl text-gray-700 sm:px-6 lg:px-8">

  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="my-auto text-2xl font-bold sm:text-3xl">Recent experiments</h1>
    </div>
    <div class="flex">
      <%= link_to [:new, :experiment], class: "flex items-center justify-center p-3 text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-lime-600 focus:outline-none focus:border focus:ring-1" do %>

        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-3 w-6 h-6 text-lime-600">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="w-full text-sm font-medium">Start a new experiment</span>

      <% end %>

      <%= search_form_for @query, class: "my-auto ml-4 w-96" do |f| %>
        <label for="index-search" class="mb-2 text-sm font-medium text-gray-900 sr-only">Search</label>
        <div class="relative">
          <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
            <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          </div>

          <%= f.search_field :title_or_rich_text_description_body_cont, class: "block w-full p-4 pl-10 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-lime-600 focus:border-lime-600", placeholder: "Search Objects, Files", required: false %>

          <button type="submit" class="absolute right-2.5 bottom-2.5 py-2 px-4 text-sm font-medium text-white bg-lime-600 rounded-lg hover:bg-lime-800 focus:ring-4 focus:ring-lime-600 focus:outline-none">Search</button>
        </div>
      <% end %>
    </div>
  </div>

  <div id="experiments">
    <% if @experiments.count > 0 %>
      <%= render @experiments %>
      <% if @pagy.pages > 1 %>
        <%== pagy_nav(@pagy) %>
      <% end %>
    <% else %>
      <div class="relative p-8 text-center bg-white rounded-lg border border-gray-200">
        <h2 class="text-2xl font-medium">
          There's nothing here...
        </h2>

        <p class="mt-4 text-sm text-gray-500">
          Created experiments will appear here
        </p>

      </div>

    <% end %>
  </div>
</div>
