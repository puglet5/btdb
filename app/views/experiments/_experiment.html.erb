<div class="max-w-screen-xl px-4 py-8 mx-auto sm:px-6 lg:px-8">

  <div class="w-full bg-white border rounded-lg shadow-md">
    <ul class="flex flex-wrap text-sm font-medium text-center text-gray-500 border-b border-gray-200 rounded-t-lg bg-gray-50">
      <li class="mr-2">
        <button id="about-tab" data-tabs-target="#about" type="button" role="tab" aria-controls="about" aria-selected="true" class="inline-block p-4 rounded-tl-lg text-lime-600 hover:bg-gray-100 bg-lime-300/25">Info</button>
      </li>
      <li class="mr-2">
        <button id="objects-tab" type="button" role="tab" aria-controls="objects" aria-selected="false" class="inline-block p-4 hover:text-gray-600 hover:bg-gray-100">Objects (3)</button>
      </li>
      <li class="mr-2">
        <button id="files-tab" type="button" role="tab" aria-controls="files" aria-selected="false" class="inline-block p-4 hover:text-gray-600 hover:bg-gray-100">Files (286)</button>
      </li>
    </ul>
    <div id="defaultTabContent">
      <div class="p-4 bg-white rounded-lg md:p-8 md:pt-4" id="info" role="tabpanel" aria-labelledby="info-tab">

        <span class="mr-2 text-xs font-semibold rounded text-lime-800 bg-lime-100 px-2.5 py-0.5">
          <%= experiment.status %>
        </span>

        <h2 class="mt-1 text-4xl font-bold text-gray-700 sm:truncate sm:text-2xl">
          <%= link_to experiment do %>
            <%= experiment.title %>
          <% end %>
        </h2>

        <div class="flex flex-col mt-2 sm:flex-row sm:flex-wrap sm:space-x-6">

          <div class="flex items-center ml-1 text-sm text-gray-500">
