<%= render "shared/errors", obj: @experiment %>

<div class="max-w-screen-xl px-4 py-24 mx-auto sm:px-6 lg:px-8">

  <div class="flex items-center justify-center">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="my-auto mr-4 w-7 h-7 text-lime-600">
      <path fill-rule="evenodd" d="M8.5 3.528v4.644c0 .729-.29 1.428-.805 1.944l-1.217 1.216a8.75 8.75 0 013.55.621l.502.201a7.25 7.25 0 004.178.365l-2.403-2.403a2.75 2.75 0 01-.805-1.944V3.528a40.205 40.205 0 00-3 0zm4.5.084l.19.015a.75.75 0 10.12-1.495 41.364 41.364 0 00-6.62 0 .75.75 0 00.12 1.495L7 3.612v4.56c0 .331-.132.649-.366.883L2.6 13.09c-1.496 1.496-.817 4.15 1.403 4.475C5.961 17.852 7.963 18 10 18s4.039-.148 5.997-.436c2.22-.325 2.9-2.979 1.403-4.475l-4.034-4.034A1.25 1.25 0 0113 8.172v-4.56z" clip-rule="evenodd" />
    </svg>

    <h1 class="font-bold tracking-widef mb-text-2xl sm:text-3xl">Editing Experiment</h1>
  </div>

  <%= simple_form_for @experiment, validate: true, html: { class: "max-w-screen-lg mx-auto mt-8 mb-0 space-y-4" } do |f| %>

    <div class="grid grid-cols-2 space-x-8">

      <div class="mb-6 ml-8 ">
        <%= render Forms::LabelComponent.new().with_content("Title/Name") %>
        <div class="relative">
          <%= f.input :title, label: false, hint: false, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" }, placeholder: "Here be dragons" %>
          <span class="absolute inset-y-0 inline-flex items-center right-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-amber-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.249-8.25-3.286zm0 13.036h.008v.008H12v-.008z" />
            </svg>
          </span>
        </div>
      </div>

      <div class="mb-6">
        <%= render Forms::LabelComponent.new().with_content("Author") %>
        <div class="relative">
          <%= f.input :author, label: false, hint: false, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" }, placeholder: "John Doe" %>
          <span class="absolute inset-y-0 inline-flex items-center right-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-amber-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.249-8.25-3.286zm0 13.036h.008v.008H12v-.008z" />
            </svg>
          </span>
        </div>
      </div>

      <div class="col-span-2 mb-6">
        <%= render Forms::LabelComponent.new().with_content("Description") %>
        <%= f.input :description, as: :rich_text_area, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm" }, label: false %>
        <%= render Forms::PHelperComponent.new(cls: "!ml-2").with_content("You can edit the content and attach images with buttons above. ") %>

      </div>

      <div class="mb-6">
        <%= render Forms::LabelComponent.new().with_content("Staff") %>
        <%= f.input :staff, label: false, hint: false, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" }, placeholder: "John Doe, Jane Doe" %>
      </div>

      <div class="mb-6">

        <%= render Forms::LabelComponent.new().with_content("Category/Type") %>
        <%= f.input :category, default: @experiment.category, collection: Experiment.categories.keys.map { |s| [s.humanize, s] }, input_html: {class: "block w-full p-4 px-0 pr-12 text-sm bg-transparent border-0 border-b-2 border-gray-200 appearance-none py-2.5 focus:outline-none focus:ring-0 focus:border-gray-200 peer"}, hint: false, label: false %>
      </div>

      <div class="mb-6">

        <%= render Forms::LabelComponent.new().with_content("Status") %>
        <%= f.input :status, default: @experiment.status, collection: Experiment.statuses.keys.map { |s| [s.humanize, s] }, input_html: { class: "block w-full p-4 px-0 pr-12 text-sm bg-transparent border-0 border-b-2 border-gray-200 appearance-none py-2.5 focus:outline-none focus:ring-0 focus:border-gray-200 peer" }, hint: false, label: false %>
      </div>

      <div class="mb-6">

        <%= render Forms::LabelComponent.new().with_content("Open date") %>

        <%= f.input :open_date, as: :date, html5: true, label: false, hint: false, required: true, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" } %>
      </div>

      <div class="mb-6">

        <%= render Forms::LabelComponent.new().with_content("Close date") %>

        <%= f.input :close_date, as: :date, html5: true, label: false, hint: false, required: true, input_html: { class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" } %>
      </div>
    </div>

    <div class="ml-8 form-actions">
      <%= f.submit "Save Experiment", class: "inline-block px-5 py-3 mr-3 text-sm font-medium text-white rounded-lg bg-lime-600" %>
      <%= link_to "Back to experiments", experiments_path, class: "text-sm text-gray-500" %>
    </div>
  <% end %>
</div>
