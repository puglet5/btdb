<section class="flex hidden fixed inset-y-0 right-0 z-50" data-toggle-target="toggle">
  <div class="w-screen max-w-sm">
    <div class="flex flex-col h-full text-gray-500 bg-white border divide-y divide-gray-200">
      <div class="overflow-y-scroll">
        <header class="flex justify-between items-center pl-6 h-16">
          <span class="text-sm font-medium tracking-widest uppercase">
            Menu
          </span>

          <%= tag.div data: { action: "click->toggle#toggle" } do %>

            <button aria-label="Close menu" class="w-16 h-16 border-gray-200" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          <% end %>
        </header>

        <nav class="flex flex-col text-sm font-medium text-gray-500 border-t border-b border-gray-200 divide-y divide-gray-200">
          <%= link_to "Home", [:root], class: "px-6 py-3 text-gray-500 transition hover:text-lime-700 #{'!text-lime-700 !font-medium' if controller.controller_name == 'pages' }" %>
          <%= link_to "Experiments", [:experiments], class: "px-6 py-3 text-gray-500 transition hover:text-lime-700 #{ '!text-lime-700 !font-medium' if controller.controller_name == 'experiments' }" %>
          <%= link_to "Samples", [:samples], class: "px-6 py-3 text-gray-500 transition hover:text-lime-700 #{ '!text-lime-700 !font-medium' if controller.controller_name == 'samples' }" %>
        </li>
      </nav>
    </div>
  </div>
</div>
</section>
