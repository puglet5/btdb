<div class="flex items-center">
  <%= tag.div id: "images-modal", tabindex: "-1", class: "fixed top-0 left-0 right-0 z-50 flex items-center justify-center hidden w-full h-full bg-gray-500 bg-opacity-75", data: { modal_target: "modal" } do %>
    <div class="relative max-w-screen-xl p-0 m-10 shadow-2xl h-2/3 md:h-auto">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow ">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-5 border-b rounded-t ">
          <div>
            <h3 class="text-xl font-medium text-gray-900 ">
              Attached images
            </h3>
            <p class="text-sm leading-relaxed text-gray-500 ">
              Delete or reorder images by dragging
            </p>
          </div>
          <button type="button" class="inline-flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 p-1.5" data-action="click->modal#toggle">
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="p-6 space-y-2">
          <div class="grid grid-cols-5 overflow-auto gap-y-1 max-h-1/2">
            <% obj.images.each do |image| %>
              <% if image.persisted? %>
                <%= tag.div data: { controller: "attachment", attachment_id_value: image.signed_id, attachment_target: "div", "attachment-classname-value": obj.class.name.demodulize.downcase }, class: "m-2 border border-gray-200 rounded" do %>
                  <div class="relative" id="modal-image-container">
                    <%= image_tag image.variant(resize: '400x300^', crop: '400x300+0+0').processed, class: "object-cover w-full rounded ", data: { attachment_target: "object" } %>
                    <%= tag.button type: "button", class: "absolute top-0 right-0", data: { action: "click->attachment#delete", attachment_target: "delete" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white bg-gray-700 rounded-lg bg-opacity-30 m-0.5 hover:bg-gray-900 hover:bg-opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                    <%= tag.button type: "button", class: "absolute top-0 right-0 hidden", data: { action: "click->attachment#return", attachment_target: "return" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 text-white bg-gray-700 rounded-lg bg-opacity-30 m-0.5 hover:bg-gray-900 hover:bg-opacity-30">
                        <path fill-rule="evenodd" d="M7.793 2.232a.75.75 0 01-.025 1.06L3.622 7.25h10.003a5.375 5.375 0 010 10.75H10.75a.75.75 0 010-1.5h2.875a3.875 3.875 0 000-7.75H3.622l4.146 3.957a.75.75 0 01-1.036 1.085l-5.5-5.25a.75.75 0 010-1.085l5.5-5.25a.75.75 0 011.06.025z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
