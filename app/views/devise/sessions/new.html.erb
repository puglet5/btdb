<div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8">
  <div class="max-w-lg mx-auto text-center">
    <h1 class="text-2xl font-bold sm:text-3xl">Get started today!</h1>

    <p class="mt-4 text-gray-500">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Et libero nulla
      eaque error neque ipsa culpa autem, at itaque nostrum!
    </p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { data: { turbo: false }, class: "max-w-md mx-auto mt-8 mb-0 space-y-4" }) do |f| %>

    <div>
      <label for="email" class="sr-only">Email</label>

      <div class="relative">
        <%= f.input :email,
                required: false,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" }, placeholder: "Enter email" %>

        <span class="absolute inset-y-0 inline-flex items-center right-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
          </svg>
        </span>
      </div>
    </div>

    <div>
      <label for="password" class="sr-only">Password</label>
      <div class="relative">
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm focus:ring-1 focus:ring-lime-600 focus:border-lime-600" }, placeholder: "Enter password", label: false %>

        <span class="absolute inset-y-0 inline-flex items-center right-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </span>
      </div>
    </div>

    <div class="flex items-center mb-4">
      <%= f.input :remember_me, as: :boolean, label: false, input_html: { class: "w-4 h-4 my-auto bg-white border-gray-300 rounded 100 text-lime-600 focus:ring-1 focus:ring-lime-600" } if devise_mapping.rememberable? %>
      <label for="default-checkbox" class="ml-2 text-sm font-normal text-gray-500 dark:text-gray-300">Remember me</label>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "inline-block px-5 py-3 mr-3 text-sm font-medium text-white rounded-lg bg-lime-600" %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="ml-3 text-sm text-gray-500">
          No account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "underline" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
